<Defs>

    <!--__________ Weapons __________-->

    <!--_____ Assault Rifles _____-->

    <!-- Alloy Steel Assault Rifle -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>FCP_Gun_USA_Alloy_Steel_Assault_Rifle</defName>
        <label>Alloy Steel Assault Rifle</label>
        <description>Built from hardened alloy steel and precision-machined components, this assault rifle delivers consistent, high-velocity fire under harsh conditions. Balanced ergonomics and a tuned gas system keep recoil manageable, making rapid follow-up shots practical even in heavy combat. Favored by hardened units for its durability and ability to punch through field-grade armor.</description>
        <!-- A rugged alloy-steel assault rifle engineered for reliability, high muzzle velocity, and excellent armor penetration. -->
        <graphicData>
            <texPath>Weapons/Assault_Rifles/FCP_Alloy_Steel_Assault_Rifle</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <recipeMaker>
            <researchPrerequisites>
                <li>FCP_Research_USA_Standard_Infantry_Gear</li>
            </researchPrerequisites>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Simple_Weapons_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <statBases>
            <WorkToMake>50000</WorkToMake>
            <Mass>2.5</Mass>
            <AccuracyTouch>0.65</AccuracyTouch>
            <AccuracyShort>0.75</AccuracyShort>
            <AccuracyMedium>0.75</AccuracyMedium>
            <AccuracyLong>0.70</AccuracyLong>
            <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
        </statBases>
        <weaponTags>
            <li>FCP_USA_Alloy_Steel_Assault_Rifle</li>
            <li>FCP_Assault_Rifle</li>
        </weaponTags>
        <costList>
            <Steel>65</Steel>
            <ComponentIndustrial>6</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>FCP_Bullet_556mm</defaultProjectile>
                <warmupTime>1.0</warmupTime>
                <range>30</range>
                <burstShotCount>4</burstShotCount>
                <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
                <soundCast>FCP_Sound_Shot_Assault_Rifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>8</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
        </comps>
    </ThingDef>

