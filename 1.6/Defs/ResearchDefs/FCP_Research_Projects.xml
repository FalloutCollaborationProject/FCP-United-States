<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ FCP USA Research __________-->

    <!--_____ USA Tech Print Base _____-->

    <!-- Military Tech Prints -->

    <ResearchProjectDef Name="FCP_USA_Pre_War_Military_Research_Base" Abstract="true">
        <techprintCount>1</techprintCount>
        <techprintCommonality>1</techprintCommonality>
        <tab>FCP_Pre_War_Research</tab>
        <baseCost>500</baseCost>
        <techLevel>Industrial</techLevel>
        <heldByFactionCategoryTags>
            <li>FCP_Faction_USA</li>
        </heldByFactionCategoryTags>
        <modExtensions>
            <li Class="FCP.Core.TechprintExtension">
                <baseLabel>FCP_Techprint_Label</baseLabel>
                <baseDescription>FCP_Techprint_Desc</baseDescription>
				<texPath>Things/Items/Techprints/FCP_Techprint_Holotape_Mil</texPath>
				<requiredBench>FCP_Production_Tool_Bench</requiredBench>
            </li>
        </modExtensions>
    </ResearchProjectDef>

    <!--_____ USA Army _____-->

    <!-- Standard Infantry -->

    <!-- Pre War Military Uniforms -->

    <ResearchProjectDef ParentName="FCP_Pre_War_Military_Research_Base">
        <defName>FCP_Research_USA_Standard_Infantry_Gear</defName>
        <label>Holotape File: Standard Infantry Gear</label>
        <description>Equip the United States Army with regulation uniforms gear and weapons, ensuring every soldier is prepared for service at home and abroad in defense of American interests.</description>
        <baseCost>1000</baseCost>
        <researchViewX>2.00</researchViewX>
        <researchViewY>1.00</researchViewY>
    </ResearchProjectDef>

    <!-- Infantry Variations -->

    <ResearchProjectDef ParentName="FCP_Pre_War_Military_Research_Base">
        <defName>FCP_Research_USA_Infantry_Variations</defName>
        <label>Holotape File: Infantry Variations</label>
        <description>Create specialized uniforms and equipment for Army units, including winter warfare, engineers, and medics, tailored to the diverse needs of the U.S. military.</description>
        <baseCost>1000</baseCost>
        <prerequisites>
            <li>FCP_Research_USA_Standard_Infantry_Gear</li>
        </prerequisites>
        <researchViewX>3.00</researchViewX>
        <researchViewY>1.00</researchViewY>
    </ResearchProjectDef>

    <!-- Standard Marine Corps -->

    <ResearchProjectDef ParentName="FCP_Pre_War_Military_Research_Base">
        <defName>FCP_Research_USA_Marine_Corps_Equipment</defName>
        <label>Holotape File: Marine Corps Equipment</label>
        <description>Create specialized uniforms and equipment for Marine Corps units, ensuring they are prepared for amphibious and expeditionary warfare.</description>
        <baseCost>1000</baseCost>
        <prerequisites>
            <li>FCP_Research_USA_Standard_Infantry_Gear</li>
        </prerequisites>
        <researchViewX>4.00</researchViewX>
        <researchViewY>1.00</researchViewY>
    </ResearchProjectDef>

    <!-- Mechanized Infantry -->

    <ResearchProjectDef ParentName="FCP_Pre_War_Military_Research_Base">
        <defName>FCP_Research_USA_Mechanized_Infantry_Corps</defName>
        <label>Holotape File: Mechanized Infantry Regiment</label>
        <description>Modernize the U.S. Army with mechanized divisions, integrating power armor to enhance mobility and battlefield dominance.</description>
        <baseCost>1000</baseCost>
        <prerequisites>
            <li>FCP_Research_Power_Armor_Training</li>
            <li>FCP_Research_USA_Infantry_Variations</li>
        </prerequisites>
        <researchViewX>6.00</researchViewX>
        <researchViewY>1.00</researchViewY>
    </ResearchProjectDef>

</Defs>

