    <!-- US General Uniform-->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>FCP_Apparel_US_Generals_Uniform</defName>
        <label>US General Uniform</label>
        <description>A distinguished uniform issued to generals of the United States Army, symbolizing command and tradition. Its immaculate condition and ornate details reflect the prestige and authority of America's military leadership.</description>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_MilitaryUniforms</researchPrerequisite>
            <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Tailoring_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Apparel/US_Army_Generals_Outfit/FCP_US_Army_General_Outfit</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.90</drawSize>
        </graphicData>
        <techLevel>Industrial</techLevel>
        <costList>
            <Cloth>150</Cloth>
        </costList>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <WorkToMake>10000</WorkToMake>
            <Mass>2</Mass>
            <Insulation_Cold>1.0</Insulation_Cold>
            <Insulation_Heat>2.3</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.5</SocialImpact>            <!-- Charisma +2 -->
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/US_Army_Generals_Outfit/FCP_US_Army_General_Outfit</wornGraphicPath>
