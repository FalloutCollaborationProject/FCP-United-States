    <!--___ Presidential ___-->

    <!-- Presidents Suit -->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>FCP_Apparel_USA_Presidents_Suit</defName>
        <label>President's suit</label>
        <description>An elegant formal suit worn by the President of the United States. Made from the finest materials with exquisite tailoring, it represents the dignity and authority of the highest office in the nation. The suit is both comfortable and imposing, suitable for state functions and diplomatic meetings.</description>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <researchPrerequisite>ComplexClothing</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
            </recipeUsers>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Apparel/US_Presidents_Suit/FCP_USA_Presidents_Suit</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>80</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>16000</WorkToMake>
            <Mass>0.4</Mass>
            <Flammability>1.0</Flammability>
            <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
            <ArmorRating_Heat>0.0</ArmorRating_Heat>
            <Insulation_Cold>12</Insulation_Cold>
            <Insulation_Heat>8</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.50</SocialImpact>
            <TradePriceImprovement>0.15</TradePriceImprovement>
            <NegotiationAbility>0.25</NegotiationAbility>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/US_Presidents_Suit/FCP_USA_Presidents_Suit</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>FCP_USA_Presidential</li>
                <li>FCP_USA_Civilian</li>
            </tags>
            <defaultOutfitTags>
                <li>FCP_USA_Formal</li>
            </defaultOutfitTags>
