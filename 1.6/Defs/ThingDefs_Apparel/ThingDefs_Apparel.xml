    <!-- US General Uniform-->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>FCP_Apparel_US_Generals_Uniform</defName>
        <label>US General Uniform</label>
        <description>A distinguished uniform issued to generals of the United States Army, symbolizing command and tradition. Its immaculate condition and ornate details reflect the prestige and authority of America's military leadership.</description>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_USA_Officer_Corps</researchPrerequisite>
            <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Tailoring_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <graphicData>
            <texPath>Apparel/US_Army_Generals_Outfit/FCP_US_Army_Generals_Outfit</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.90</drawSize>
        </graphicData>
        <techLevel>Industrial</techLevel>
        <costList>
            <Cloth>150</Cloth>
        </costList>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <WorkToMake>10000</WorkToMake>
            <Mass>2</Mass>
            <Insulation_Cold>1.0</Insulation_Cold>
            <Insulation_Heat>2.3</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.5</SocialImpact>            <!-- Charisma +2 -->
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/US_Army_Generals_Outfit/FCP_US_Army_Generals_Outfit</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
                <li>Middle</li>
            </layers>
            <tags>
                <li>FCP_USA_General</li>
                <li>FCP_USA_Officer</li>
            </tags>
            <defaultOutfitTags>
                <li>FCP_USA_General</li>
                <li>FCP_USA_Officer</li>
            </defaultOutfitTags>
        </apparel>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
        </comps>
        <tradeTags>
            <li>FCP_Trade_Tag_USA_Apparel</li>
        </tradeTags>
    </ThingDef>

